{
    "name": "devesharp/pattern",
    "autoload": {
        "psr-4": {
            "Devesharp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Devesharp\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "bin": [
        "bin/generate-swagger"
    ],
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "illuminate/database": "^9.0",
        "cebe/php-openapi": "^1.5",
        "adbario/php-dot-notation": "^3.1",
        "michael-rubel/laravel-formatters": "^5.0",
        "spatie/data-transfer-object": "^3.9"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Devesharp\\Generators\\Provider\\GeneratorsProvider",
                "Devesharp\\SwaggerGenerator\\Providers\\SwaggerGeneratorProvider",
                "Devesharp\\Support\\Validators\\ValidatorProvider"
            ]
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "orchestra/testbench": "^7.6"
    }
}
